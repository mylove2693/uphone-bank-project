<?xml version="1.0" encoding="utf-8"?>
<!-- 销卡布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backcredit"
    >
<include android:id="@+id/canclecreditabove" layout="@layout/main_bank_above" />
<include android:id="@+id/canclecreditbelow" layout="@layout/main_bank_bottom" />
<LinearLayout
	android:id="@+id/Creditcancle"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	 android:orientation="vertical"
	android:layout_below="@id/canclecreditabove"
	android:layout_above="@id/canclecreditbelow"
	>
	<TableLayout
	android:id="@+id/Creditcancle"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
  <TableRow>
  
<!-- 信用卡文本  -->
<TextView
android:id="@+id/cancelCardTiSiText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="*信用卡号:"
android:textSize="16dip"
android:paddingLeft="12dip"
android:textColor="#000000"
>
</TextView>
<Spinner
	android:id="@+id/creditNoSpinner"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:prompt="@string/creditnumber"
	
/>
</TableRow>
<View android:layout_height="1dip"         android:background="#000000" /> 

<TableRow>
<TextView
android:id="@+id/userNameText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="*开户名:"
android:textSize="16dip"
android:paddingLeft="12dip"
android:textColor="#ffffff"
>
</TextView>
<!-- 用户名  编辑输入框-->
<EditText
android:id="@+id/userNameEdit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16dip"
>
</EditText>
</TableRow>
<View android:layout_height="1dip"         android:background="#000000" /> 
 <TableRow>

<TextView
android:id="@+id/pakitClassText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="*证件类型:"
android:textSize="16dip"
android:paddingLeft="12dip"
android:textColor="#000000"
>
</TextView>
<!--证件类型  下拉框-->
<Spinner
	android:id="@+id/pakitSpinner"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:prompt="@string/pakitclass"
/>
</TableRow>
<View android:layout_height="1dip"         android:background="#000000" /> 
<TableRow>
<TextView
android:id="@+id/pakitNoText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="*证件号:"
android:textSize="16dip"
android:paddingLeft="12dip"
android:textColor="#000000"
>
</TextView>
<!-- 证件号 输入框 -->
<EditText
android:id="@+id/pakitNoEdit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16dip"

>
</EditText>
</TableRow>
<View android:layout_height="1dip"         android:background="#000000" /> 
<TableRow>
<!-- 手机号 提示文本  -->
<TextView
android:id="@+id/mobileNoText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="手机号码:"
android:paddingLeft="12dip"
android:textSize="16dip"
android:textColor="#000000"
>
</TextView>
<!-- 手机号 输入编辑框  -->
<EditText
android:id="@+id/mobileNoEdit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16dip"

>
</EditText>
</TableRow>
<View android:layout_height="1dip"         android:background="#000000" /> 
<TableRow>
<!-- 帐户密码 提示文本  -->
<TextView
android:id="@+id/creditpassword"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="帐户密码:"
android:textSize="16dip"
android:paddingLeft="12dip"
android:textColor="#000000"
>
</TextView>
<!-- 帐户密码 输入编辑框  -->
<EditText
android:id="@+id/creditpasswordEdit"
android:layout_width="wrap_content"
android:layout_height="35dip"
android:textSize="16dip"
>
</EditText>
</TableRow>
<View android:layout_height="1dip"         android:background="#000000" /> 
</TableLayout>
<!-- 销卡按钮 布局 -->
<LinearLayout
android:id="@+id/activateCardButtonLayout"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10dip"
android:gravity="center"
>
<Button
android:id="@+id/cancelCard"
android:layout_width="100dip"
android:layout_height="40dip"
android:text="确认销卡"
android:textSize="16dip"
android:textStyle="bold"
android:gravity="center"
android:layout_gravity="center"
>
</Button>
</LinearLayout>

</LinearLayout>
</RelativeLayout>
