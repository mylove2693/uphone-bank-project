<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/accountque"
    >
<include android:id="@+id/paymentabove" layout="@layout/main_bank_above" />
<include android:id="@+id/paymentbelow" layout="@layout/main_bank_bottom" />
<LinearLayout
	android:id="@+id/Listquery"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_below="@id/paymentabove"
	android:layout_above="@id/paymentbelow"
	>
	
	
	<!-- 顶端账户和账号 -->
	<RelativeLayout
		    android:paddingLeft="10dip"
		    android:paddingRight="10dip"
		    android:paddingTop="1dip"
		    android:paddingBottom="1dip"
		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
		    >
	<LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	>
		<TextView 
		android:id="@+id/acc1"
		android:layout_width="92dip"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="15dip"
		/>
		<TextView 
		android:id="@+id/acc2"
		android:gravity="left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="15dip"
		/>
	</LinearLayout>
	</RelativeLayout>
	 <!-- end顶端账户和账号 -->
	 
	 	<!-- 顶端账户类型 -->
	<RelativeLayout
		    android:paddingLeft="10dip"
		    android:paddingRight="10dip"
		    android:paddingTop="1dip"
		    android:paddingBottom="1dip"
		    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
		    >
	<LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	>
		<TextView 
		android:id="@+id/type1"
		android:layout_width="92dip"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="15dip"
		/>
		<TextView 
		android:id="@+id/type2"
		android:gravity="left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="15dip"
		/>
	</LinearLayout>
	</RelativeLayout>
	 <!-- end顶端账户类型 -->
	 
	  <!-- 账户和类型之间的线 -->
	 <TextView
				android:layout_height="1dip"
				android:layout_width="fill_parent"
				android:background="#c0c0ff">
			</TextView>
   <!-- end账户和类型之间的线 -->
   

	<!-- 分隔线 -->
	 <TextView
				android:layout_height="1dip"
				android:layout_width="fill_parent"
				android:background="#c0c0ff">
	 </TextView>
	 <!-- 自动列表 -->
<ListView
	android:id="@id/android:list" 
	android:divider="#cccccc" 
    android:dividerHeight="2px"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:drawSelectorOnTop="true"
    android:scrollbars="vertical"
    />
</LinearLayout>
</RelativeLayout>