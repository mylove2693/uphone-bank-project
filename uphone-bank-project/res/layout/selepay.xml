<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backcredit"
    >
<include android:id="@+id/creditabove3" layout="@layout/main_bank_above" />
<include android:id="@+id/creditbelow3" layout="@layout/main_bank_bottom" />
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_below="@id/creditabove3"
	android:layout_above="@id/creditbelow3"
	>
	<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	<ImageView
	android:id="@+id/creditimgpay"
	android:layout_width="30dip"
	android:layout_height="30dip"
	android:src="@drawable/zhen"
	android:paddingLeft="15dip"
	android:layout_gravity="center_vertical"
	/>
<TextView
android:id="@+id/selfPayText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="已绑定信用卡还款"
android:textSize="18dip"
android:textStyle="bold"
android:textColor="#000000"
android:layout_marginLeft="10dip"
android:layout_gravity="center_vertical"
>
</TextView>
</LinearLayout>
 <TextView
				android:layout_height="1dip"
				android:layout_width="fill_parent"
				android:background="#808080ff">
			</TextView>
<ListView
android:id="@id/android:list"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
>
</ListView>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
<ImageView
	android:id="@+id/creditimgpay1"
	android:layout_width="30dip"
	android:layout_height="30dip"
	android:src="@drawable/zhen"
	android:paddingLeft="15dip"
	android:layout_gravity="center_vertical"
	/>
	
<TextView
android:id="@+id/selfPayText1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="其它信用卡还款"
android:textSize="18dip"
android:textStyle="bold"
android:textColor="#000000"
android:layout_marginLeft="10dip"
android:layout_gravity="center_vertical"
>
</TextView>
</LinearLayout>
 <TextView
    android:layout_height="1dip"
	android:layout_width="fill_parent"
	android:background="#808080ff">
	</TextView>
<TextView
android:id="@+id/selfPayText2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="信用卡号"
android:textSize="18dip"
android:textStyle="bold"
android:textColor="#000000"
android:layout_marginLeft="80dip"
android:visibility="gone"
/>
 <TextView
				android:layout_height="1dip"
				android:layout_width="fill_parent"
				android:background="#808080ff"
				android:visibility="gone">
			</TextView>
</LinearLayout>
</RelativeLayout>
