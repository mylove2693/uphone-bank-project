<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/accountque"
    >
<include android:id="@+id/paymentabove" layout="@layout/main_bank_above" />
<include android:id="@+id/paymentbelow" layout="@layout/main_bank_bottom" />
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_below="@id/paymentabove"
	android:layout_above="@id/paymentbelow"
	>
<ListView
	android:id="@id/android:list"
	android:divider="#cccccc" 
    android:dividerHeight="2px"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:drawSelectorOnTop="true"
    android:scrollbars="vertical"
    />
<TextView
	android:layout_height="1dip"
	android:layout_width="fill_parent"
	android:background="#cccccc">
</TextView>
<LinearLayout 	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
<TextView
	android:textSize="14dip"
	android:paddingLeft="10dip"
	android:paddingTop="6dip"
	android:textColor="#253e81"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:text="描述：">
</TextView>
<EditText 	android:layout_width="200dip"
            android:layout_marginLeft="30dip"
            android:layout_gravity="left"
            android:singleLine="false"
	        android:layout_height="80dip"
	        android:textSize="14dip"
	        android:text="描述描述描述">
</EditText>
</LinearLayout>
</LinearLayout>
</RelativeLayout>