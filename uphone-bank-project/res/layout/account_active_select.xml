<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@drawable/main_background_2">
	<include android:id="@+id/accManaAbove" layout="@layout/main_bank_above" />
	<include android:id="@+id/accManaBottom" layout="@layout/main_bank_bottom" />
	<LinearLayout android:layout_below="@id/accManaAbove"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TextView android:id="@+id/accAct_tvSelectType"
			android:textColor="#ff000000" android:textSize="18dip"
			android:layout_marginLeft="21dip" android:text="@string/accinfo_selectType"
			android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
		<Spinner android:id="@+id/accAct_SpnrSelectType"
			android:textSize="18dip" android:background="@drawable/spinner1"
			android:layout_width="227dip" android:layout_marginLeft="47dip"
			android:layout_height="wrap_content" android:prompt="@string/accinfo_selectTypeTitle"></Spinner>

		<TextView android:id="@+id/accAct_tvSelectAcc" android:text="@string/accinfo_selectAcc"
			android:textSize="18dip" android:layout_marginLeft="21dip"
			android:layout_width="fill_parent" android:textColor="#ff000000"
			android:layout_height="wrap_content"></TextView>
		<Spinner android:id="@+id/accAct_SpnrSelectAcc"
			android:textSize="18dip" android:background="@drawable/spinner1"
			android:layout_height="wrap_content" android:layout_marginLeft="47dip"
			android:layout_width="227dip" android:prompt="@string/accinfo_selectAccTitle"></Spinner>

		<TextView android:id="@+id/accAct_tvPwd" android:text="@string/accAct_TpyePwd"
			android:textSize="18dip" android:layout_marginLeft="21dip"
			android:layout_width="fill_parent" android:textColor="#ff000000"
			android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/accAct_dtPwd" android:background="@drawable/main_et"
			android:layout_width="227dip" android:layout_marginLeft="47dip"
			android:textSize="18dip" android:layout_height="wrap_content"
			android:prompt="@string/accinfo_selectAccTitle"></EditText>

		<Button android:layout_gravity="center_horizontal"
			android:textSize="18dip" android:background="@drawable/main_next"
			android:layout_width="wrap_content" android:layout_marginTop="10dip"
			android:text="@string/accAct_Active" android:layout_height="wrap_content"
			android:id="@+id/accAct_btnActive"></Button>
	</LinearLayout>
</RelativeLayout>
