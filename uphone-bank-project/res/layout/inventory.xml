<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:layout_width="fill_parent"
              android:id="@+id/inventory" 
              android:layout="@layout/inventory"
	          android:layout_height="fill_parent" 
	          xmlns:android="http://schemas.android.com/apk/res/android"
	          android:background="@drawable/bg">
	<include android:id="@+id/accManaAbove" layout="@layout/main_bank_above" />
	<include android:id="@+id/accManaBottom" layout="@layout/main_bank_bottom" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_below="@id/accManaAbove" android:layout_height="fill_parent"
		android:orientation="vertical">
		<TableLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical" android:stretchColumns="1">
			<TextView android:id="@+id/inventory1"
	          android:layout_height="wrap_content" 
	          android:layout_width="wrap_content"
	          android:textSize="25dp"
	          android:text="请输入你要查询的时间区间"
	          android:layout_marginLeft="8dip">
	        </TextView>
	        <TableRow>
	        <TextView 
	          android:layout_column="1"
	          android:layout_height="2dip" 
	          android:layout_width="20dip"
	          android:background="#ffffffff"
	          android:layout_marginTop="10dip">
	        </TextView>
	        </TableRow>
	        <TableRow>
			<TextView android:id="@+id/inventory_c"
	          android:layout_height="wrap_content" 
	          android:layout_width="wrap_content"
	          android:textSize="25dp"
	          android:text="从"
	          android:gravity="left"
	          android:layout_marginTop="10dip"/>
	        <Spinner  android:id="@+id/timechange_from"
	          android:layout_height="wrap_content" 
	          android:layout_width="wrap_content"
	          android:gravity="center"
	          android:layout_marginTop="10dip">
	        </Spinner>
	        </TableRow>
	        <TableRow>
			<TextView android:id="@+id/inventory_c"
	          android:layout_height="wrap_content" 
	          android:layout_width="wrap_content"
	          android:textSize="25dp"
	          android:text="到"
	          android:gravity="left"
	          android:layout_marginTop="10dip">
	        </TextView>
	        <Spinner  android:id="@+id/timechange_to"
	          android:layout_height="wrap_content" 
	          android:layout_width="wrap_content"
	          android:gravity="center"
	          android:layout_marginTop="10dip">
	        </Spinner>
	        </TableRow>
		</TableLayout>
			<Button  android:id="@+id/Query_Run"
	          android:layout_height="wrap_content" 
	          android:layout_width="wrap_content"
	          android:text="查 询 ->"
	          android:layout_marginTop="10dip"
	          android:layout_marginLeft="240dip">
	        </Button>
	</LinearLayout>
</RelativeLayout>