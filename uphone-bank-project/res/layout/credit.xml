<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/widget45"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/bg"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<include layout="@layout/main_bank_bottom"/>
<TableLayout
android:id="@+id/creditLayout"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_centerVertical="true"
android:layout_centerHorizontal="true"
>
<TableRow
android:layout_marginLeft="60dip"
>
<ImageButton
android:id="@+id/creditDetail"
android:layout_width="80dip"
android:layout_height="80dip"
android:src="@drawable/creditdetail"
android:scaleType="fitXY"
android:background="#00ffffff"
>
</ImageButton>
<ImageButton
android:id="@+id/creditpay"
android:layout_width="80dip"
android:layout_height="80dip"
android:layout_marginLeft="40dip"
android:src="@drawable/creditpay"
android:scaleType="fitXY"
android:background="#00ffffff"
>
</ImageButton>
</TableRow>
<TableRow
android:layout_marginLeft="60dip"
>
<TextView
android:id="@+id/creditDetailText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="&#36134;&#25143;&#26126;&#32454;"
android:textStyle="bold"
android:gravity="center"
android:textColor="#ffffff"
>
</TextView>
<TextView
android:id="@+id/creditpayText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="&#20449;&#29992;&#21345;&#36824;&#27454;"
android:textStyle="bold"
android:gravity="center"
android:layout_marginLeft="40dip"
android:textColor="#ffffff"
>
</TextView>
</TableRow>
<TableRow
android:layout_marginLeft="60dip"
>
<ImageButton
android:id="@+id/activateCard"
android:layout_width="80dip"
android:layout_height="80dip"
android:src="@drawable/activatecard"
android:scaleType="fitXY"
android:background="#00ffffff"
>
</ImageButton>
<ImageButton
android:id="@+id/cancelTheCard"
android:layout_width="80dip"
android:layout_height="80dip"
android:layout_marginLeft="40dip"
android:src="@drawable/cancelthecard"
android:scaleType="fitXY"
android:background="#00ffffff"
>
</ImageButton>
</TableRow>
<TableRow
android:layout_marginLeft="60dip"
>
<TextView
android:id="@+id/activateCardText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="&#24320;&#21345;"
android:textStyle="bold"
android:gravity="center"
android:textColor="#ffffff"
>
</TextView>
<TextView
android:id="@+id/cancelTheCardText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="&#38144;&#21345;"
android:textStyle="bold"
android:gravity="center"
android:layout_marginLeft="40dip"
android:textColor="#ffffff"
>
</TextView>
</TableRow>
<TableRow
android:layout_marginLeft="60dip"
>
<ImageButton
android:id="@+id/creditCardBind"
android:layout_width="80dip"
android:layout_height="80dip"
android:src="@drawable/creditcardbind"
android:scaleType="fitXY"
android:background="#00ffffff"

>
</ImageButton>
</TableRow>
<TableRow
android:layout_marginLeft="60dip"
>
<TextView
android:id="@+id/widget64"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="&#20449;&#29992;&#21345;&#32465;&#23450;"
android:textStyle="bold"
android:gravity="center"
android:textColor="#ffffff"
>
</TextView>
</TableRow>
</TableLayout>
</RelativeLayout>
