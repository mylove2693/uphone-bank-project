<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">  
   <TextView  
    android:id="@+id/credit"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="信用卡"
    android:textSize="12sp"
    android:singleLine="true"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">  
<Button 
    android:id="@+id/creditDetail"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:text="帐户信息"
    android:textSize="20sp"
    />
    <Button
    android:id="@+id/creditDetail1"
     android:layout_width="20dip"
    android:layout_height="20dip"
    android:background="@drawable/righticon"/>
    </LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">  
  <Button 
    android:id="@+id/buscredit"
   android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:text="交易明细查看"
    android:textSize="20sp"/>
   <Button
    android:id="@+id/buscredit1"
     android:layout_width="20dip"
    android:layout_height="20dip"
    android:background="@drawable/righticon"/>
    </LinearLayout>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">  
    <Button 
    android:id="@+id/comelook"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:text="帐户来帐查看"
    android:textSize="20sp"
    />
    <Button
    android:id="@+id/comelook1"
     android:layout_width="20dip"
    android:layout_height="20dip"
    android:background="@drawable/righticon"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">  
    <Button 
    android:id="@+id/activateCard"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:text="开卡"
    android:textSize="20sp"
    android:singleLine="true"/>
     <Button
    android:id="@+id/activateCard1"
     android:layout_width="20dip"
    android:layout_height="20dip"
    android:background="@drawable/righticon"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">  
     <Button 
    android:id="@+id/cancelTheCard" 
    android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:text="销卡"
    android:textSize="20sp"
   android:singleLine="true"/>
    <Button
    android:id="@+id/cancelTheCard1"
     android:layout_width="20dip"
    android:layout_height="20dip"
    android:background="@drawable/righticon"/>
   </LinearLayout>
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">  
<Button 
    android:id="@+id/creditpay"
    android:layout_width="200dip"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:text="信用卡还款"
    android:textSize="20sp"
    />
    <Button
    android:id="@+id/creditpay1"
     android:layout_width="20dip"
    android:layout_height="20dip"
    android:background="@drawable/righticon"/>
    </LinearLayout>
</LinearLayout>
