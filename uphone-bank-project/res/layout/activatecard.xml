<?xml version="1.0" encoding="utf-8"?>
<!-- 开卡布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">
<include android:id="@+id/activatecreditabove" layout="@layout/main_bank_above" />
<include android:id="@+id/activatecreditbelow" layout="@layout/main_bank_bottom" />
<LinearLayout
	android:id="@+id/topTiSiInfoLayout"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	 android:orientation="vertical"
	android:layout_below="@id/activatecreditabove"
	android:layout_above="@id/activatecreditbelow"
>
	<TableLayout
	android:id="@+id/Creditactivate"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TableRow>
<TextView
android:id="@+id/userNameText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="*开户名:"
android:textSize="16sp"
android:paddingLeft="12dip"
android:textColor="#ffffff"
>
</TextView>
<!-- 用户名  编辑输入框-->
<EditText
android:id="@+id/userNameEdit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
>
</EditText>
</TableRow>
  <TableRow>
  
<!-- 信用卡文本  -->
<TextView
android:id="@+id/creditNoText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="*信用卡号:"
android:textSize="16sp"
android:paddingLeft="12dip"
android:textColor="#ffffff"
>
</TextView>
<EditText
android:id="@+id/creditNoEdit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
>
</EditText>
</TableRow>

 <TableRow>

<TextView
android:id="@+id/creditEnabledDateText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="*卡号有效期:"
android:textSize="16sp"
android:paddingLeft="12dip"
android:textColor="#ffffff"
>
</TextView>
<EditText
android:id="@+id/creditEnabledDateEdit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
>
</EditText>
</TableRow>
<TableRow>
<TextView
android:id="@+id/pakitNoText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="*证件类型:"
android:textSize="16sp"
android:paddingLeft="12dip"
android:textColor="#ffffff"
>
</TextView>
<!--证件类型  下拉框-->
<Spinner
	android:id="@+id/pakitSpinner"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:prompt="@string/pakitclass"
/>
</TableRow>
<TableRow>
<TextView
android:id="@+id/pakitNoText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="*证件号:"
android:textSize="16sp"
android:paddingLeft="12dip"
android:textColor="#ffffff"
>
</TextView>
<!-- 证件号 输入框 -->
<EditText
android:id="@+id/pakitNoEditText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
>
</EditText>
</TableRow>
<TableRow>
<!-- 手机号 提示文本  -->
<TextView
android:id="@+id/mobileNoText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="手机号码:"
android:paddingLeft="12dip"
android:textSize="16sp"
android:textColor="#ffffff"
>
</TextView>
<!-- 手机号 输入编辑框  -->
<EditText
android:id="@+id/mobileNoEdit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
>
</EditText>
</TableRow>
<TableRow>
<!-- 固定电话 提示文本  -->
<TextView
android:id="@+id/phoneNoText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="固定号码:"
android:paddingLeft="12dip"
android:textSize="16sp"
android:textColor="#ffffff"
>
</TextView>
<!-- 固定电话 输入编辑框  -->
<EditText
android:id="@+id/phoneNoEdit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
>
</EditText>
</TableRow>
<TableRow>
<!-- 帐户密码 提示文本  -->
<TextView
android:id="@+id/accountpasswordText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="帐户密码:"
android:textSize="16sp"
android:paddingLeft="12dip"
android:textColor="#ffffff"
>
</TextView>
<!-- 帐户密码 输入编辑框  -->
<EditText
android:id="@+id/accoutpasswordEdit"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
>
</EditText>
</TableRow>
</TableLayout>
<!-- 开卡按钮 布局 -->
<LinearLayout
android:id="@+id/activateCardButtonLayout"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10dip"
android:gravity="center"
>
<Button
android:id="@+id/activateCard1"
android:layout_width="100dip"
android:layout_height="40dip"
android:text="确认开卡"
android:textSize="16sp"
android:textStyle="bold"
android:gravity="center"
android:layout_gravity="center"
/>
</LinearLayout>
</LinearLayout>
</RelativeLayout>

